{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "preserve",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmit": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
